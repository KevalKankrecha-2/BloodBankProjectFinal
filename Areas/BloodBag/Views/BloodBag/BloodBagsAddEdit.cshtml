@section Scripts{

    <script>
        function date_chng() {
            first_date = new Date($('.DaonateDateFillAuto').val());
            output_f = new Date(first_date.setDate(first_date.getDate() + 42)).toISOString().split('.');
            output_s = output_f[0].split('T');
            $('.ExpireDateFillAuto').val(output_s[0]);
        }
    </script>

