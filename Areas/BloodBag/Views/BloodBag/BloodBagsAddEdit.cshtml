            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane show active" id="typeahead-preview">
                                    <h4 class="page-title">Add/Edit Blood Bag</h4>
                                    <form enctype="multipart/form-data" method="post" asp-area="BloodBag" asp-controller="BloodBag" asp-action="Save">

                                        @Html.HiddenFor(x => x.BloodBagSerialNumber)
                                        <div class="row mb-3">
                                            <div class="col-lg-6">
                                                @if (ViewBag.BloodGroupDropDownList != null)
                                                {
                                                    <label class="form-label font-weight-bold">Select BloodGroup</label>
                                                    <select class="form-control select2" data-toggle="select2" asp-items="@(new SelectList(ViewBag.BloodGroupDropDownList, "BloodGroupID", "BloodGroupName").ToList()) " asp-for="BloodGroupID">
                                                    </select>
                                                }
                                            </div> <!-- end col -->
                                            <div class="col-lg-6">
                                                <label class="form-label font-weight-bold">Select Donate</label>
                                                <select class="form-control select2" data-toggle="select2" asp-items="@(new SelectList(ViewBag.DonorDropDownList, "DonorID", "DonorName").ToList()) " asp-for="DonorID">
                                                </select>
                                            </div> <!-- end col -->
                                        </div>
                                        <!-- end row -->


                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    <label class="form-label font-weight-bold">Donate Date</label>
                                                    <input type="date" onchange="date_chng()" class="form-control DaonateDateFillAuto" data-provide="typeahead" asp-for="DonateDate">
                                                </div>
                                            </div> <!-- end col -->
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    <label class="form-label font-weight-bold">Expire Date</label>
                                                    <input type="date" class="form-control ExpireDateFillAuto" data-provide="typeahead" asp-for="ExpireDate">
                                                </div>
                                            </div> <!-- end col -->
                                        </div>
                                        <!-- end row -->


                                        <div class="row mb-3">
                                            <div class="col-lg-6">
                                                @if (ViewBag.DoctorDropDownList != null)
                                                {
                                                    <label class="form-label font-weight-bold">Verified By</label>
                                                    <select class="form-control select2" data-toggle="select2" asp-items="@(new SelectList(ViewBag.DoctorDropDownList, "DoctorID", "DoctorName").ToList()) " asp-for="VerifiedDoctorID">
                                                    </select>
                                                }

                                            </div><!-- end col -->
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    <label class="form-label font-weight-bold">Verification Doctor Remarks</label>
                                                    <textarea class="form-control" asp-for="VerificationDoctorRemarks" placeholder="Address"></textarea>
                                                </div>
                                            </div> <!-- end col -->

                                        </div>
                                        <!-- end row -->

                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="mb-3">
                                                    <label class="form-label font-weight-bold">Out PatientID</label>
                                                    <select class="form-control select2" data-toggle="select2" asp-for="OutPatientID">
                                                        <option value="InStock">Out Patient Nu Drop Down Ahi Avshe</option>
                                                    </select>
                                                </div>
                                            </div> <!-- end col -->
                                        </div>
                                        <!-- end row -->

