                                                <div class="mb-3">
                                                    <label class="form-label font-weight-bold">Description</label>
                                                    <textarea class="form-control" asp-for="Description" placeholder="Description"></textarea>
                                                </div>
                                            </div> <!-- end col -->
                                        </div>
                                        <!-- end row -->


                                        <div class="row">
                                            <div class="col-lg-12">
                                                <input type="submit" class="btn btn-primary" value="Save">
                                            </div>
                                        </div>
                                    </form>
                                </div> <!-- end preview-->

                            </div> <!-- end tab-content-->

                        </div> <!-- end card-body -->
                    </div> <!-- end card-->
                </div> <!-- end col -->
